{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Override for Next.js */
    "moduleResolution": "bundler",
    /* Base Options: */
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "composite": true,
    /* Path Aliases - inherit from root + local */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@fondation/shared/*": ["../shared/src/*"],
      "@fondation/web/*": ["./src/*"],
      "@fondation/worker/*": ["../worker/src/*"],
      "@fondation/cli/*": ["../cli/src/*"],
      "@convex/*": ["../../convex/*"],
      "@convex/generated/*": ["../../convex/_generated/*"]
    }
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
