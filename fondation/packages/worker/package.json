{
  "name": "@fondation/worker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --project .",
    "build:bundle": "tsc --project . && node scripts/bundle-worker.js --production",
    "bundle": "node scripts/bundle-worker.js --production",
    "start": "bun dist/index.js",
    "start:bundled": "bun dist/worker.bundled.mjs",
    "typecheck": "tsc --noEmit --project .",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --write --unsafe",
    "format:check": "biome format src/ --check",
    "format:write": "biome format src/ --write",
    "check": "biome check src/ && tsc --noEmit"
  },
  "dependencies": {
    "convex": "^1.26.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.4",
    "tsx": "^4.0.0",
    "typescript": "^5.8.2"
  }
}
