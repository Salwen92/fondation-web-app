# Build stage for authenticated worker
# This creates a Docker image with Claude CLI pre-authenticated

FROM node:20-alpine AS base

# Install required packages
RUN apk add --no-cache \
    git \
    curl \
    bash \
    ca-certificates

# Create worker user and directories
RUN addgroup -g 1001 worker && \
    adduser -D -u 1001 -G worker worker && \
    mkdir -p /app /tmp/fondation && \
    chown -R worker:worker /app /tmp/fondation

WORKDIR /app

# Copy application files
COPY --chown=worker:worker . .

# Install dependencies
WORKDIR /app/fondation
RUN npm ci --only=production

# Build the worker
WORKDIR /app/fondation/apps/worker
RUN npm run build

# Install Claude CLI globally
RUN npm install -g @anthropic-ai/claude

# Switch to worker user
USER worker

# Set up environment
ENV NODE_ENV=production \
    TEMP_DIR=/tmp/fondation \
    CLI_PATH=/usr/local/bin/claude

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Expose health port
EXPOSE 8080

# NOTE: This image needs manual authentication after building
# Run with: docker run -it --name claude-auth fondation-worker:base /bin/sh
# Then inside: claude login
# Then commit: docker commit claude-auth fondation-worker:authenticated

CMD ["npm", "start"]