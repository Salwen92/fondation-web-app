{
  "name": "@fondation-io/fondation",
  "version": "1.0.0-beta.9",
  "description": "CLI tool to run prompts using Claude Code SDK",
  "main": "dist/index.js",
  "bin": {
    "fondation": "./dist/cli.bundled.mjs"
  },
  "scripts": {
    "build": "tsc && node scripts/bundle-cli-bun.js --production",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --write --unsafe",
    "format": "biome format --write src/",
    "format:check": "biome check src/",
    "check": "biome check --write src/",
    "start": "node dist/index.js",
    "dev": "bun run src/dev.tsx",
    "cli": "bun run src/cli.ts",
    "cli:dev": "bun --watch src/cli.ts",
    "cli:dist": "node dist/cli.js",
    "build:dev": "tsc && node scripts/bundle-cli-bun.js",
    "build:bundle-only": "node scripts/bundle-cli-bun.js --production",
    "generate-chapters": "bun run src/generate-chapters.ts",
    "review-chapters": "bun run src/review-chapters.ts",
    "generate-tutorials": "bun run src/generate-tutorials.ts",
    "analyze-all": "bun run src/analyze-all.ts",
    "ui-analyze-all": "bun run src/ui-analyze-all.tsx",
    "mock-ui": "bun run scripts/generate-ui-mock.tsx",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fondation-io/fondation.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/cli.bundled.cjs",
    "prompts/**/*",
    "schemas/**/*",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/claude-code": "1.0.51",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.1.8",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "ink": "^6.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "pino": "9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^20.19.4",
    "esbuild": "^0.25.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.2"
  },
  "type": "module",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit -p tsconfig.json'",
      "biome check --no-errors-on-unmatched"
    ],
    "src/**/*.{js,jsx}": [
      "biome check --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "biome check --no-errors-on-unmatched"
    ]
  }
}
