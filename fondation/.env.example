# Convex Configuration (required)
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_URL=https://your-deployment-name.convex.cloud

# Next.js Web App
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-random-secret
AUTH_SECRET=generate-random-secret

# GitHub OAuth (create app at https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret

# Worker Configuration (optional - defaults provided)
WORKER_ID=worker-local-dev
POLL_INTERVAL=5000
LEASE_TIME=300000
HEARTBEAT_INTERVAL=60000
MAX_CONCURRENT_JOBS=1

# File System Configuration (optional)
TEMP_DIR=/tmp/fondation
CLI_PATH=claude

# Development Settings
NODE_ENV=development