{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "paths": {
      "@fondation/shared": ["./packages/shared/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/worker" },
    { "path": "./packages/cli" }
  ],
  "files": []
}
