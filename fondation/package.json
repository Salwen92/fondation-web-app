{
  "name": "fondation",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "build:cli": "bun run --filter '@fondation-io/fondation' build",
    "dev:web": "bun run --filter '@fondation/web' dev",
    "dev:worker": "bun run --filter '@fondation/worker' dev",
    "dev:cli": "bun run --filter '@fondation-io/fondation' dev",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --cache"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "isomorphic-dompurify": "^2.26.0"
  }
}